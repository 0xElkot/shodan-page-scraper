{
  "manifest_version": 3,
  "name": "Shodan Page Scraper",
  "version": "1.0.1",
  "description": "Grab IPs, subdomains, open ports, and domain records from Shodan pages and export to CSV/JSON.",
  "action": {
    "default_title": "Shodan Scraper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://shodan.io/*",
    "https://*.shodan.io/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}